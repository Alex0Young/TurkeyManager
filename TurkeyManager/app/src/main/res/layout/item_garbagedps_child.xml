<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <CheckBox
        android:id="@+id/chile_ckb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/chile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chile_ckb"
        android:layout_toRightOf="@+id/chile_ckb"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/chile_app_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chile_icon"
        android:text="qq"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/chile_appsize_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chile_app_txt"
        android:layout_alignBottom="@+id/chile_app_txt"
        android:layout_alignParentRight="true"
        android:text="25.11kb"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>